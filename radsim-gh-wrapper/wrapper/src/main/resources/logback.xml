<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with pattern for progress logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger at INFO level to show progress updates -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- GraphHopper-specific loggers -->
    <logger name="com.graphhopper" level="INFO" />

    <!-- Our wrapper loggers -->
    <logger name="org.radsim.ghwrapper" level="INFO" />
</configuration>
